<section class='intro'>
	<div class='intro__meta'>
		<time class='intro__time'>{{{doc.date}}}</time>
		<p class='read_time'>{{{doc.read}}}</p>
		<p class='intro__byline'>
			<a href='{{meta.author.url}}' target='_blank'>
				<strong>{{doc.author}}</strong>
			</a>
		</p>

	</div>


	{{#each doc.intro}}
	<p class='prose prose-large'>{{{value}}}</p>
	{{/each}}

	<div class='scroll-note'>
		<p class='scroll-text'>Netflix Screensaver Simulator</p><img inline src='arrow-down-1.svg'>
	</div>


	{{> story/ads }}
	<img class='entCenter' src='assets/images/entertainment_center.png'>

	{{#each doc.postTV}}
	<p class='prose prose-large'>{{{value}}}</p>
	{{/each}}

	<p class='prose'>{{{doc.preDef}}}</p>
	<p class='definition'>{{{doc.def}}}</p>

	{{#each doc.postComplaint}}
	<p class='prose'>{{{value}}}</p>
	{{/each}}
</section>