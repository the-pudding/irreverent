/* CUSTOM STORY STYLE */

.figure-container 
    background $figure-gradient
    border-top 2px solid #484848
    border-bottom 2px solid #484848
    padding 3rem 0

.ex 
    font-family $national
    font-weight bold 
    text-transform uppercase

.spoiler 
    font-family $martel
    background $primary
    padding 0 0.3rem
    set-type-size('small')
    margin 0 auto
    text-align center

.ir   
    font-family $martel
    padding 0 0.2rem
    font-weight 800

.meta 
    margin-bottom 2rem

.figure-title
    font-family $national-narrow
    set-type-size('large-font')
    font-weight bold
    margin-top 0
    text-align center 

.figure-sub
    font-family $national-narrow
    set-type-size('large')
    margin 0
    text-align center


.highlight
    margin 2rem 0  
    padding 3rem 0  
    background $primary
    width 100%
    &__inner
        max-width $column-width 
        padding 0 1rem 
        margin 0 auto
        .prose__highlight
            font-family $anton
            set-type-size('xxx-large')
            text-align center 
            line-height 1.2

.definition
    max-width $column-width 
    margin 0 auto 
    padding 1rem 
    font-family $national-narrow
    border-left 4px solid $primary
    set-type-size('x-large')
    background $def-gradient
    span 
        font-weight bold
