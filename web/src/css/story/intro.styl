.intro
	margin 0 auto
	padding 6rem 1rem 3rem 1rem

	&__hed
		max-width 60rem
		margin 0 auto
		text-align center
		
	&__dek
		max-width $column-width
		margin 0 auto
		margin-top 1rem
		text-align center

	.example 
		max-width 400px
		margin 0 auto

.intro__meta 
	display flex 
	flex-direction column
	width 150px
	position absolute 
	top 8rem
	left 0
	translate(calc(-100% - 37px),0)
	justify-content flex-end

	p, time 
		font-weight 500
		margin 0
		text-align right

	time 
		font-family $national-narrow
		set-type-size('small')

	p
		font-family $anton 
		set-type-size('medium')
		a
			border-bottom none

.ads 
	max-width $column-width 
	margin 3rem auto 
	height 500px
	.controls 
		display flex 
		flex-direction row
	button 
		padding 0.5rem 0.5rem
		margin 0 0.25rem
		border-radius 50%
		background lighten($bg, 5)
		border 1px solid $white
		display flex 
		flex-direction row
		justify-items center
		align-items center
		svg		
			color $white
			transform scale(0.75)
	.figure__inner 
		width 100%
		height 90%
	svg  
		.title 
			font-family $national
			set-type-size('large')
			font-weight bold
			text-shadow 2px 2px 5px $bg
		.word-container
			opacity 0
			font-family $national-narrow 
			set-type-size('root')
			&.is-visible 
				opacity 1
			.word-bg 
				fill rgba($bg, 0.8)