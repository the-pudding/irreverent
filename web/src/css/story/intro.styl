.intro
	margin 0 auto
	padding 6rem 1rem 3rem 1rem

	&__hed
		max-width 60rem
		margin 0 auto
		text-align center
		
	&__dek
		max-width $column-width
		margin 0 auto
		margin-top 1rem
		text-align center

	.example 
		max-width 400px
		margin 0 auto
.large
	set-type-size('x-large')
	font-weight bold

.intro__meta 
	display flex 
	flex-direction column
	width 150px
	position absolute 
	top 8rem
	left 0
	translate(calc(-100% - 37px),0)
	justify-content flex-end

	p, time 
		font-weight 500
		margin 0
		text-align right

	time 
		font-family $national-narrow
		set-type-size('small')

	p
		font-family $martel 
		set-type-size('medium')
		a
			border-bottom none

.ads 

	max-width $column-width 
	margin 3rem auto 
	height 500px
	.controls 
		display flex 
		flex-direction row
	button 
		padding 0.5rem 0.5rem
		margin 0 0.25rem
		border-radius 50%
		background lighten($bg, 5)
		border 1px solid $white
		display flex 
		flex-direction row
		justify-items center
		align-items center
		svg		
			color $white
			transform scale(0.75)
	.figure__container 
		display flex
		max-width $column-width
		.figure__inner 
			//width 100%
			height 266px
			&-graph 
				width 66%
			&-list 
				width 33%
		svg  
			.title 
				font-family $national
				set-type-size('large')
				font-weight bold
				text-shadow 2px 2px 5px $bg

			.word-container, .tag-container
				opacity 0
				font-family $national-narrow 
				set-type-size('root')
				&.is-visible 
					opacity 1
				.word-bg
					fill $gray-dark
					padding 0 0.1rem
			.list-title 
				set-type-size('root')
				font-family $national-narrow
				font-weight bold
				text-transform uppercase
				fill $gray-light
			.tag
				set-type-size('small')
				margin 0
				text-align center
				word-wrap normal
				font-family $martel
				fill $white

			.word
				set-type-size('x-small')
				margin 0
				text-align center
				word-wrap normal
				font-family $martel
				fill $gray-light
			.show__tag-bg 
				color $bg
