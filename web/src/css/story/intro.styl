.intro
	margin 0 auto
	padding 6rem 1rem 3rem 1rem

	&__hed
		max-width 60rem
		margin 0 auto
		text-align center
		
	&__dek
		max-width $column-width
		margin 0 auto
		margin-top 1rem
		text-align center


	.adsStart 
		background-color $primary
		font-family $national
		set-type-size('medium')
		text-align center 
		padding 0.5rem 2.5rem
		color $fg
		text-transform uppercase
		margin 1rem auto
		max-width 300px

.intro__meta 
	display flex 
	flex-direction column
	width 150px
	position absolute 
	top 8rem
	left 0
	translate(calc(-100% - 37px),0)
	justify-content flex-end
	display none

	p, time 
		font-weight 500
		margin 0
		text-align right

	time 
		font-family $national-narrow
		set-type-size('small')

	p
		font-family $martel 
		set-type-size('medium')
		a
			border-bottom none


.ads 
	max-width 74rem 
	margin 2rem auto 
	overflow hidden



	.figure__container 
		display flex
		flex-direction column
		margin 0 auto
		justify-content center
		align-items center
		+mq('bp-3')
			flex-direction row
			align-items flex-start
		.controls 
			display flex 
			flex-direction row
			align-items flex-end
			align-self center
			margin-right 1rem
			+mq('bp-3')
				flex-direction column
			button 
				padding 0.5rem 0.5rem
				margin 0.25rem
				width 40px
				border-radius 50%
				background lighten($bg, 5)
				border 1px solid $white
				display flex 
				flex-direction row
				justify-items center
				align-items center
				svg		
					color $white
					transform scale(0.75)
		
		svg  
			.tv-outline 
				stroke $gray
				stroke-width 4px
				fill transparent

			.title 
				font-family $national
				set-type-size('xxxxx-large')
				font-weight bold
				fill $white


			.word-container, .tag-container
				opacity 0
				font-family $national-narrow 
				set-type-size('xx-large')
				&.is-visible 
					opacity 1
				.word-bg
					fill $gray-dark
					padding 0 0.1rem
			.list-title 
				set-type-size('root')
				font-family $national-narrow
				font-weight bold
				text-transform uppercase
				fill $gray-light
			.tag
				set-type-size('xx-large')
				margin 0
				text-align center
				word-wrap normal
				font-family $national
				fill $white
	

			.show__tag
				text-shadow 2px 2px 5px $bg

			.word
				set-type-size('small')
				margin 0
				text-align center
				word-wrap normal
				font-family $martel
				fill $gray-light

		.pudding-list 
			margin-left 1rem

		.article-title
			.title-bg 
				fill $primary 
			text 
				fill $white 
				font-family $national
			
			.title-desc
				set-type-size('x-large')
				font-weight bold
				text-transform uppercase
			.title-sub 
				set-type-size('root')
